<Page x:Class="gestion.locker"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:gestion"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="locker">

    <Grid Background="White">

        <TextBlock Text="Gestion des Casiers Intelligents"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,20" />

        <TextBlock Text="Contrôlez et testez le fonctionnement des casiers"
                   FontSize="14"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,30" />

        <!-- Ajout d'un StackPanel pour descendre les cadres -->
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="0,50,0,0">

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top">

                <Border Background="LightGray"
                        CornerRadius="10"
                        Padding="20"
                        Margin="5"
                        Width="250">

                    <StackPanel>
                        <TextBlock Text="Casier #1"
                                   FontSize="18"
                                   FontWeight="Bold" />
                        <TextBlock Text="Disponible"
                                   Foreground="Green"
                                   FontSize="14" />
                        <TextBlock Text="Dernière utilisation : 2024-05-14 15:30"
                                   FontSize="12" />
                        <Button Content="Ouvrir pour Test"
                                Background="Blue"
                                Foreground="White"
                                Margin="0,10,0,0" />
                    </StackPanel>

                </Border>

                <Border Background="LightGray"
                        CornerRadius="10"
                        Padding="20"
                        Margin="5"
                        Width="250">

                    <StackPanel>
                        <TextBlock Text="Casier #2"
                                   FontSize="18"
                                   FontWeight="Bold" />
                        <TextBlock Text="Occupé"
                                   Foreground="Red"
                                   FontSize="14" />
                        <TextBlock Text="Dernière utilisation : 2024-05-16 09:15"
                                   FontSize="12" />
                        <Button Content="Ouvrir pour Test"
                                Background="Blue"
                                Foreground="White"
                                Margin="0,10,0,0" />
                    </StackPanel>

                </Border>

            </StackPanel>

            <StackPanel VerticalAlignment="Bottom"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0">

                <Button Content="Retour au menu"
                        Background="Gray"
                        Foreground="White" />

                <Button Content="Admin Panel"
                        Background="DarkGray"
                        Foreground="White"/>

            </StackPanel>

        </StackPanel>

    </Grid>

</Page>