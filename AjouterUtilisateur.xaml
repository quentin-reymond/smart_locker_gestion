<Window x:Class="gestion.AjouterUtilisateur"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter Utilisateur" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Nom:" FontWeight="Bold"/>
            <TextBox x:Name="TxtNom" Margin="0,0,0,10"/>

            <TextBlock Text="Prénom:" FontWeight="Bold"/>
            <TextBox x:Name="TxtPrenom" Margin="0,0,0,10"/>

            <TextBlock Text="Email:" FontWeight="Bold"/>
            <TextBox x:Name="TxtEmail" Margin="0,0,0,10"/>

            <TextBlock Text="Carte RFID:" FontWeight="Bold"/>
            <TextBox x:Name="TxtCarteRFID" IsReadOnly="True" Margin="0,0,0,10"/>

            <Button Content="Ajouter" Click="BtnAjouter_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>