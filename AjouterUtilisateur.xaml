<Window x:Class="gestion.AjouterUtilisateur"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter Utilisateur" Height="551" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#F8F8F8">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Ajouter un Nouvel Utilisateur" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20" 
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Nom:" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBox x:Name="TxtNom" 
                      Margin="0,0,0,10" 
                      Padding="10" 
                      BorderThickness="1" 
                      BorderBrush="#CCCCCC" 
                      Background="White"/>

            <TextBlock Text="Prénom:" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBox x:Name="TxtPrenom" 
                      Margin="0,0,0,10" 
                      Padding="10" 
                      BorderThickness="1" 
                      BorderBrush="#CCCCCC" 
                      Background="White"/>

            <TextBlock Text="Email:" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBox x:Name="TxtEmail" 
                      Margin="0,0,0,10" 
                      Padding="10" 
                      BorderThickness="1" 
                      BorderBrush="#CCCCCC" 
                      Background="White"/>

            <TextBlock Text="Carte RFID:" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBox x:Name="TxtCarteRFID" 
                      IsReadOnly="True" 
                      Margin="0,0,0,20" 
                      Padding="10" 
                      BorderThickness="1" 
                      BorderBrush="#CCCCCC" 
                      Background="#E9E9E9"/>

            <Button Content="Ajouter" 
                    Click="BtnAjouter_Click" 
                    Margin="0,20,0,0" 
                    Padding="10" 
                    Background="#4CAF50" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    BorderBrush="Transparent" 
                    Cursor="Hand" 
                    HorizontalAlignment="Center" 
                    Height="39" 
                    Width="200"/>
        </StackPanel>
    </Grid>
</Window>