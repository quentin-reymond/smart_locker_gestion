<Window x:Class="gestion.user"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gestion"
        mc:Ignorable="d"
        Title="Gestion des Casiers Intelligents" 
        Height="700" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        MinWidth="1200" MinHeight="600">

    <Window.Resources>
        <!-- Styles pour les boutons -->
        <Style x:Key="HeaderButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2C3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#34495E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Header -->
        <Grid Height="60" VerticalAlignment="Top" Background="White">
            <Grid.Effect>
                <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="5" ShadowDepth="2"/>
            </Grid.Effect>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                <!-- Logo/Icon -->
                <Border Width="32" Height="32" Background="#2C3E50" CornerRadius="6" Margin="0,0,15,0">
                    <Path Fill="White" 
                          Data="M12,2L2,7V10C2,16 6,20.9 12,22C18,20.9 22,16 22,10V7L12,2M11,7H13V9H11V7M11,11H13V17H11V11Z" 
                          Width="18" Height="18" 
                          Stretch="Uniform"
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center"/>
                </Border>

                <TextBlock Text="Gestion des Casiers Intelligents" 
                          FontSize="18" 
                          FontWeight="SemiBold" 
                          VerticalAlignment="Center"
                          Foreground="#2C3E50"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="20,0">
                <Button x:Name="BtnRetour" Content="← Retour au menu" Style="{StaticResource HeaderButtonStyle}" Click="BtnRetour_Click"/>
                <Button x:Name="BtnAdmin" Content="⚙ Admin Panel" Style="{StaticResource HeaderButtonStyle}" Margin="10,0,0,0" Click="BtnAdmin_Click"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Margin="0,60,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="30,30,30,20">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Path Fill="#666666" 
                              Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z" 
                              Width="24" Height="24" 
                              Stretch="Uniform"
                              VerticalAlignment="Center" 
                              Margin="0,0,10,0"/>
                        <TextBlock Text="Gestion des Utilisateurs" 
                                  FontSize="24" 
                                  FontWeight="SemiBold" 
                                  VerticalAlignment="Center"
                                  Foreground="#2C3E50"/>
                    </StackPanel>

                    <TextBlock Text="Gérez les utilisateurs et leurs cartes RFID" 
                              FontSize="14" 
                              Foreground="#666666" 
                              Margin="34,0,0,20"/>

                    <!-- Search Bar and Add Button -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Box -->
                        <Border Grid.Column="0" 
                                Background="White" 
                                BorderBrush="#E0E0E0" 
                                BorderThickness="1" 
                                CornerRadius="4"
                                Height="40">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Path Grid.Column="0" 
                                      Fill="#999999" 
                                      Data="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z" 
                                      Width="16" Height="16" 
                                      Stretch="Uniform"
                                      VerticalAlignment="Center" 
                                      Margin="12,0,8,0"/>

                                <TextBox x:Name="TxtSearch" 
                                         Grid.Column="1" 
                                         Background="Transparent"
                                         BorderThickness="0"
                                         FontSize="14"
                                         VerticalAlignment="Center"
                                         Margin="0,0,12,0"
                                         TextChanged="TxtSearch_TextChanged"/>

                                <TextBlock Grid.Column="1" 
                                           Text="Rechercher par nom, email ou carte RFID..." 
                                           Foreground="#999999"
                                           FontSize="14"
                                           VerticalAlignment="Center"
                                           Margin="0,0,12,0"
                                           IsHitTestVisible="False">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=TxtSearch}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>

                        <!-- Add User Button -->
                        <Button x:Name="BtnAjouter"
                                Grid.Column="1" 
                                Style="{StaticResource PrimaryButtonStyle}"
                                Margin="15,0,0,0"
                                Height="40"
                                Click="BtnAjouter_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="+" FontSize="16" FontWeight="Bold" Margin="0,0,8,0"/>
                                <TextBlock Text="Ajouter Utilisateur"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <!-- Data Table -->
                    <Border Background="White" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="1" 
                            CornerRadius="6">
                        <Grid>
                            <!-- Table Header -->
                            <Border Height="50" 
                                    Background="#F8F9FA" 
                                    VerticalAlignment="Top"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="0,0,0,1">
                                <Border.CornerRadius>
                                    <CornerRadius TopLeft="6" TopRight="6" BottomLeft="0" BottomRight="0"/>
                                </Border.CornerRadius>

                                <Grid Margin="20,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="180"/>
                                        <ColumnDefinition Width="220"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="NOM" 
                                              FontWeight="SemiBold" 
                                              FontSize="12" 
                                              Foreground="#666666" 
                                              VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="EMAIL" 
                                              FontWeight="SemiBold" 
                                              FontSize="12" 
                                              Foreground="#666666" 
                                              VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="CARTE RFID" 
                                              FontWeight="SemiBold" 
                                              FontSize="12" 
                                              Foreground="#666666" 
                                              VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="3" Text="STATUT" 
                                              FontWeight="SemiBold" 
                                              FontSize="12" 
                                              Foreground="#666666" 
                                              VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="4" Text="ACTIONS" 
                                              FontWeight="SemiBold" 
                                              FontSize="12" 
                                              Foreground="#666666" 
                                              VerticalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <!-- Users List -->
                            <ListView x:Name="ListViewUsers" 
                                      Margin="0,50,0,0"
                                      BorderThickness="0"
                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                      SelectionMode="Single">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Height="60" BorderBrush="#F0F0F0" BorderThickness="0,0,0,1">
                                            <Grid Margin="20,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="180"/>
                                                    <ColumnDefinition Width="220"/>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="{Binding Nom}" 
                                                          FontSize="14" 
                                                          FontWeight="Medium"
                                                          Foreground="#2C3E50" 
                                                          VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="1" Text="{Binding Email}" 
                                                          FontSize="14" 
                                                          Foreground="#666666" 
                                                          VerticalAlignment="Center"/>
                                                <Border Grid.Column="2" 
                                                        Background="#E8F4FD" 
                                                        CornerRadius="12" 
                                                        Width="80"
                                                        Height="24"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding CarteRFID}" 
                                                              FontSize="11" 
                                                              FontWeight="Medium"
                                                              Foreground="#1976D2" 
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                                </Border>
                                                <Border Grid.Column="3" 
                                                        Background="{Binding StatutColor}" 
                                                        CornerRadius="12" 
                                                        Width="{Binding StatutWidth}"
                                                        Height="24"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Statut}" 
                                                              FontSize="11" 
                                                              FontWeight="Medium"
                                                              Foreground="{Binding StatutTextColor}" 
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                                </Border>
                                                <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <Button Style="{StaticResource ActionButtonStyle}" 
                                                            Margin="0,0,10,0"
                                                            Tag="{Binding}"
                                                            Click="BtnModifier_Click">
                                                        <StackPanel Orientation="Horizontal">
                                                            <Path Fill="#666666" 
                                                                  Data="M20.71,7.04C21.1,6.65 21.1,6 20.71,5.63L18.37,3.29C18,2.9 17.35,2.9 16.96,3.29L15.12,5.12L18.87,8.87M3,17.25V21H6.75L17.81,9.93L14.06,6.18L3,17.25Z" 
                                                                  Width="12" Height="12" 
                                                                  Stretch="Uniform"
                                                                  Margin="0,0,5,0"/>
                                                            <TextBlock Text="Modifier" FontSize="13"/>
                                                        </StackPanel>
                                                    </Button>
                                                    <Button Style="{StaticResource ActionButtonStyle}" 
                                                            Foreground="#D32F2F"
                                                            Tag="{Binding}"
                                                            Click="BtnSupprimer_Click">
                                                        <StackPanel Orientation="Horizontal">
                                                            <Path Fill="#D32F2F" 
                                                                  Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z" 
                                                                  Width="12" Height="12" 
                                                                  Stretch="Uniform"
                                                                  Margin="0,0,5,0"/>
                                                            <TextBlock Text="Supprimer" FontSize="13"/>
                                                        </StackPanel>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
